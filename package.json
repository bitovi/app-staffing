{
  "name": "repo",
  "version": "0.1.0",
  "private": true,
  "homepage": "/",
  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "chakra:typings": "chakra-cli tokens ./src/theme/index.ts",
    "postinstall": "npm run chakra:typings",
    "precheck": "npm run typecheck && npm run eslint && npm run prettier && npm run depcheck && npm run test:ci && npm run build && echo \"\\033[32mAll good, PR ready!\"",
    "typecheck": "tsc --noEmit",
    "eslint": "eslint src",
    "prettier": "prettier --check src",
    "depcheck": "depcheck .",
    "clean": "rm -rf build coverage",
    "dev": "react-scripts start",
    "test": "react-scripts test",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache",
    "test:ci": "CI=true react-scripts test --coverage",
    "storybook": "start-storybook -s public -p 6006",
    "storybook:build": "build-storybook --quiet -s public -o build/storybook",
    "build": "react-scripts build"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@hmudesign",
    "plugins": [
      "no-only-tests"
    ],
    "rules": {
      "jsx-a11y/no-onchange": "off",
      "import/no-extraneous-dependencies": "off",
      "no-only-tests/no-only-tests": "error"
    },
    "overrides": [
      {
        "files": [
          "**/*.stories.*",
          "**/*.test.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off",
          "@typescript-eslint/explicit-module-boundary-types": "off"
        }
      }
    ]
  },
  "prettier": {
    "trailingComma": "all"
  },
  "msw": {
    "workerDirectory": "public"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "\\.stories\\."
    ],
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "lines": 0,
        "functions": 0
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.0.15",
    "@chakra-ui/react": "^1.7.5",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@types/uuid": "^8.3.3",
    "can-deparam": "^1.2.3",
    "can-local-store": "^1.0.1",
    "can-param": "^1.1.3",
    "can-query-logic": "^1.2.3",
    "classnames": "^2.3.1",
    "date-fns": "^2.25.0",
    "faker": "^5.5.3",
    "framer-motion": "^4",
    "json-api-serializer": "^2.6.6",
    "lodash": "^4.17.21",
    "msw": "^0.34.0",
    "node-sass": "^6.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.19.3",
    "react-router-dom": "^5.2.0",
    "react-select": "^4.3.1",
    "source-map-explorer": "^2.5.2",
    "swr": "^1.0.1"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^1.7.0",
    "@hmudesign/eslint-config": "^2.0.2",
    "@snek-at/storybook-addon-chakra-ui": "^1.0.0-beta.1",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-docs": "^6.3.9",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/node-logger": "^6.3.7",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.7",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^12.8.3",
    "@types/chai": "^4.2.21",
    "@types/chai-dom": "0.0.10",
    "@types/chai-spies": "^1.0.3",
    "@types/faker": "^5.5.8",
    "@types/jest": "^26.0.24",
    "@types/json-api-serializer": "^2.6.3",
    "@types/lodash": "^4.14.172",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.20.19",
    "@types/react": "^17.0.18",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/react-select": "^4.0.17",
    "chai": "^4.3.4",
    "chai-dom": "^1.9.0",
    "chai-spies": "^1.0.0",
    "depcheck": "^1.4.2",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "prettier": "2.5",
    "react-scripts": "4.0.3",
    "react-select-event": "^5.3.0",
    "typescript": "^4.3.5",
    "uuid": "^8.3.2"
  }
}
