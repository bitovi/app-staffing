{
  "name": "repo",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://bitovi.github.io/app-staffing/",
  "scripts": {
    "precheck": "npm run test:ci && npm run depcheck && npm run eslint && npm run prettier && npm run typecheck && npm run build && echo \"\\033[32mAll good, PR ready!\"",
    "depcheck": "depcheck .",
    "eslint": "eslint src",
    "prettier": "prettier --check src",
    "prettier:write": "prettier --write src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf build",
    "dev": "react-scripts start",
    "test": "react-scripts test",
    "test:ci": "CI=true react-scripts test --coverage",
    "storybook": "start-storybook -s public -p 6006",
    "storybook:build": "build-storybook -s public -o build/storybook",
    "build": "react-scripts build"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@hmudesign",
    "rules": {
      "jsx-a11y/no-onchange": "off",
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/explicit-module-boundary-types": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      },
      {
        "files": [ "*.ts"],
        "rules": {
          "@typescript-eslint/explicit-module-boundary-types": "error"
        }
      }
    ]
  },
  "prettier": {
    "trailingComma": "all"
  },
  "msw": {
    "workerDirectory": "public"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "__test__",
      "\\.stories\\.",
      "<rootDir>/src/index.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "lines": 0,
        "functions": 0
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "can-deparam": "^1.2.3",
    "can-local-store": "^1.0.1",
    "can-param": "^1.1.3",
    "can-query-logic": "^1.2.3",
    "classnames": "^2.3.1",
    "faker": "^5.5.3",
    "lodash": "^4.17.21",
    "msw": "^0.34.0",
    "node-sass": "^6.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-select": "^4.3.1",
    "swr": "^0.5.6"
  },
  "devDependencies": {
    "@hmudesign/eslint-config": "^2.0.2",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/node-logger": "^6.3.7",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.7",
    "@testing-library/dom": "^8.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^12.8.3",
    "@types/chai": "^4.2.21",
    "@types/chai-dom": "0.0.10",
    "@types/faker": "^5.5.8",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.172",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.20.19",
    "@types/react": "^17.0.18",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/react-select": "^4.0.17",
    "chai": "^4.3.4",
    "chai-dom": "^1.9.0",
    "depcheck": "^1.4.2",
    "prettier": "^2.3.2",
    "react-scripts": "4.0.3",
    "react-select-event": "^5.3.0",
    "typescript": "^4.3.5"
  }
}
