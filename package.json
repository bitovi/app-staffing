{
  "name": "repo",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://bitovi.github.io/app-staffing/",
  "scripts": {
    "chakra:typings": "chakra-cli tokens ./src/theme/index.ts",
    "postinstall": "npm run chakra:typings",
    "precheck": "npm run typecheck && npm run eslint && npm run prettier && npm run depcheck && npm run test:ci && npm run build && echo \"\\033[32mAll good, PR ready!\"",
    "typecheck": "tsc --noEmit",
    "eslint": "eslint src",
    "prettier": "prettier --check src",
    "depcheck": "depcheck .",
    "clean": "rm -rf dist coverage",
    "dev": "vite",
    "test": "react-scripts test",
    "test:ci": "CI=true react-scripts test --coverage",
    "storybook": "start-storybook -s public -p 6006",
    "storybook:build": "build-storybook -s public -o build/storybook",
    "build": "vite build"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@hmudesign",
    "rules": {
      "jsx-a11y/no-onchange": "off",
      "import/no-extraneous-dependencies": "off",
      "import/no-unresolved": [
        "error",
        {
          "commonjs": true,
          "caseSensitive": true,
          "ignore": [
            "^@staffing"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.stories.*",
          "**/*.test.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off",
          "@typescript-eslint/explicit-module-boundary-types": "off"
        }
      }
    ]
  },
  "prettier": {
    "trailingComma": "all"
  },
  "msw": {
    "workerDirectory": "public"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "\\.stories\\."
    ],
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "lines": 0,
        "functions": 0
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.0.15",
    "@chakra-ui/react": "^1.6.8",
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@react-hookz/web": "^12.0.0",
    "can-deparam": "^1.2.3",
    "can-local-store": "^1.0.1",
    "can-param": "^1.1.3",
    "can-query-logic": "^1.2.3",
    "classnames": "^2.3.1",
    "date-fns": "^2.25.0",
    "faker": "^5.5.3",
    "framer-motion": "^4.1.17",
    "lodash": "^4.17.21",
    "node-sass": "^6.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-select": "^4.3.1",
    "swr": "^1.0.1"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^1.5.0",
    "@hmudesign/eslint-config": "^2.0.2",
    "@snek-at/storybook-addon-chakra-ui": "^1.0.0-beta.1",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-docs": "^6.3.9",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/node-logger": "^6.3.7",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.7",
    "@testing-library/dom": "^8.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^12.8.3",
    "@types/chai": "^4.2.21",
    "@types/chai-dom": "0.0.11",
    "@types/chai-spies": "^1.0.3",
    "@types/faker": "^5.5.8",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.172",
    "@types/node": "^14.17.27",
    "@types/react": "^17.0.18",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/react-select": "^4.0.17",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "chai": "^4.3.4",
    "chai-dom": "^1.9.0",
    "chai-spies": "^1.0.0",
    "depcheck": "^1.4.2",
    "eslint": "^7.32.0",
    "msw": "^0.35.0",
    "prettier": "^2.3.2",
    "react-select-event": "^5.3.0",
    "typescript": "^4.4.4",
    "vite": "^2.6.10",
    "vite-plugin-svgr": "^0.4.0",
    "vite-react-jsx": "^1.1.2"
  }
}
